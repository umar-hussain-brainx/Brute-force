{%- liquid
	assign disabled_by_yoast_seo = true
	if content_for_header contains 'yoast-active-script'
		assign disabled_by_yoast_seo = false
	endif
-%}
<div class="page-width" {% if disabled_by_yoast_seo %}itemscope{% endif %} {% if disabled_by_yoast_seo %}itemprop="mainEntity"{% endif %} {% if disabled_by_yoast_seo %}itemtype="https://schema.org/Question"{% endif %}>
  <button type="button" class="collapsible-trigger collapsible-trigger--inline collapsible--auto-height text-left" aria-controls="FAQ-content-{{ block.id }}">
    {%- render 'collapsible-icons-alt', no_circle: true -%}
    <span {% if disabled_by_yoast_seo %}itemprop="name"{% endif %}>{{ block.settings.title }}</span>
  </button>
  <div id="FAQ-content-{{ block.id }}" class="collapsible-content collapsible-content--all" {% if disabled_by_yoast_seo %}itemscope{% endif %} {% if disabled_by_yoast_seo %}itemprop="acceptedAnswer"{% endif %} {% if disabled_by_yoast_seo %}itemtype="https://schema.org/Answer"{% endif %}>
    <div class="collapsible-content__inner collapsible-content__inner--faq rte" {% if disabled_by_yoast_seo %}itemprop="text"{% endif %}>
      {{ block.settings.text }}
    </div>
  </div>
</div>

{% section 'product-template' %}
{% render 'junip-product-review', product: product %}
{% section 'product-recommendations' %}
{% section 'recently-viewed' %}

{% if collection %}
  <div class="text-center page-content page-content--bottom">
    <a href="{% if collection.handle == 'frontpage' %}/{% else %}{{ collection.url }}{% endif %}" class="btn btn--small return-link">
      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon--wide icon-arrow-left" viewBox="0 0 50 15"><path d="M50 5.38v4.25H15V15L0 7.5 15 0v5.38z"/></svg> {{ 'products.general.collection_return' | t: collection: collection.title }}
    </a>
  </div>
{% endif %}

<style>
fieldset[name="Weight Option"] .variant-input, fieldset[name="Weight Option"] .variant-input label {
    width: 100%;
    text-align: center;
  	line-height: 1.25;
}

fieldset[name="Weight Option"] .variant-input label {
    overflow: visible;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(3) label {
    box-shadow:0 0 0 0px lightgrey!important;
    opacity: 0.5;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(3) input:checked + label {
    box-shadow:0 0 0 1px black!important;
    background: black;
    color: white 
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(2) label {
    padding-bottom: 20px;  
    box-shadow:0 0 0 1px black!important;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(2) input:checked + label {
    background: black;
    color: white;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(2) label:before {
    content: 'Fill It Yourself Option';
    position: absolute;
    left: 50%;
    transform: translate(-50%, 0);
    font-size: 60%;
    bottom: 5px;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(1) label {
    padding-bottom: 20px;  
    box-shadow:0 0 0 1px #dd2b2b!important;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(1) input:checked + label {
    background: #dd2b2b;
    color: white;
}

fieldset[name="Weight Option"] .variant-input:nth-of-type(1) label:before {
    content: 'Most Popular - Train Immediately';
    position: absolute;
    left: 50%;
    transform: translate(-50%, 0);
    font-size: 60%;
    bottom: 5px;
}  
  
@media screen and (max-width: 768px) {
    .variant__label {
        text-align: left;
    }
    .variant__label + div > a {
        font-size: 10px!important;
    }
}  
</style>